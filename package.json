{
  "name": "immo24-address-decoder",
  "version": "0.1.7",
  "private": false,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist web-ext-artifacts",
    "build": "bun run scripts/build.ts",
    "typecheck": "tsc --noEmit",
    "icons": "bun run scripts/make-icons.ts",
    "zip:chromium": "cd dist/chromium && zip -r ../immo24-chromium.zip .",
    "zip:firefox": "cd dist/firefox && zip -r ../immo24-firefox.zip .",
    "build:all": "bun run clean && bun run typecheck && bun run build && bun run zip:chromium && bun run zip:firefox",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/chrome": "^0.1.12",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "^24.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cpy": "^11.1.0",
    "esbuild": "^0.23.0",
    "happy-dom": "^19.0.2",
    "playwright": "^1.56.0",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
